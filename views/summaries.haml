- unless pages.empty?
  %ol
    - pages.each do |page|
      %li.post
        %h2
          %a{ :href => "#{page.abspath}" }= page.heading
        - if page.summary.nil? || page.summary.empty?
          ~ page.body(self)
        - else
          ~ page.summary
          %p.read_more
            %a(href="#{page.abspath}")= page.read_more
        = haml :post_meta, :layout => false, :locals => { :page => page }
